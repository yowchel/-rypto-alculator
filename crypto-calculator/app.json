{
  "expo": {
    "name": "Crypto Calculator",
    "slug": "crypto-calculator",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Удобный калькулятор для быстрого расчёта криптовалют в реальном времени",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yshevchuk.cryptocalculator",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Это приложение не использует камеру",
        "NSPhotoLibraryUsageDescription": "Это приложение не использует галерею"
      }
    },
    "android": {
      "package": "com.yshevchuk.cryptocalculator",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
